<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.taskmate.dao.MStatusDao">

	<!-- Mステータステーブル一覧 取得 -->
	<select id="selectAll" resultType="com.example.taskmate.entity.MStatus">
		SELECT
			status_code,
      status_name
		FROM
      m_status
		ORDER BY
			status_code
	</select>

  <!-- Mステータス 取得 -->
	<select id="selectByCode" resultType="com.example.taskmate.entity.MStatus">
    SELECT
      status_code,
      status_name
    FROM
      m_status
    WHERE
      status_code = #{statusCode}
	</select>

</mapper>
